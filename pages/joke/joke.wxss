.imagetext{
  margin: 0 0 10rpx 10rpx;
  color:  #666;
  font-size:15px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}
.newsSelected{
  border: 1px #2a579a solid;
  border-radius: 10%;
}
.tabText{
  margin:5rpx 30rpx 5rpx 30rpx;
}
.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 8px;
    padding-bottom: 10px;
    padding-top: 10px;
    position: relative;
}

.image {
    width: 100%;
    height: 200px;
    background-color: #eeeeee;
}

.time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}
.view_hide{   
 display: none;   
}   
.view_show{   
 display: block;   
} 