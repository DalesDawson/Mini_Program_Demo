.main-wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.bg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-position: center;
  background-size: cover;
  filter: blur(30rpx);
  transform: scale(1.15);
}

.bg:after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.main {
  position: absolute;
  bottom: 0;
  top: 0;
  width: 100%;
  z-index: 2;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.song-info {
  flex: none;
  padding: 30rpx;
  display: flex;
  background: rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.song-lyric {
  flex: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.song-control {
  padding: 30rpx 0;
}

.song-info .img {
  flex: none;
  margin-right: 30rpx;
  width: 160rpx;
  height: 160rpx;
}

.song-info .info {
  color: #fff;
  flex: auto;
}

.song-info .info .song-name {
  display: block;
  font-size: 36rpx;
}

.song-info .info .singer-name {
  display: block;
  font-size: 28rpx;
}

.song-info .info .singer-name text:not(:first-of-type) {
  content: '/';
  margin: 0 8rpx;
}

.song-info .last {
  width: 86rpx;
  height: 86rpx;
  background: url(data:image/png;base64,) no-repeat;  
  background-size: contain;
}

.song-info .next {
  width: 86rpx;
  height: 86rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}

.song-info .play {
  width: 86rpx;
  height: 86rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}

.song-info .play.pause {
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}

.song-control .progress {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress .time-bar {
  position: relative;
  flex: auto;
  height: 4rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.2);
}

.progress .time-bar .time-play {
  position: absolute;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #31c27c;
  transition: all 1s linear;
}

.progress .time-start, .progress .time-total {
  flex: none;
  color: #808080;
  width: 110rpx;
  text-align: center;
  font-size: 24rpx;
}

.song-lyric .img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 999rpx;
  animation: rotate 10s linear infinite;
}

.song-lyric .img.pause {
  animation-play-state: paused;
}
